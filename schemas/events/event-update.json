{
    "type" : "object",
    "properties": {
        "eventId" : {
            "type": "string",
            "required" : true
        },
        "title" : {
            "type" : "string",
            "required" : true
        },
        "description" : {
            "type" : "string",
            "required" : true
        },
        "status": {
            "type": "string",
            "required": true,
            "enum": ["RSVP"]
        },
        "infoLink": {
            "type": "string"
        },
        "price": {
            "type" : "object",
            "properties": {
                "price": {
                    "type": "number",
                    "required" : true
                },
                "formattedPrice": {
                    "type": "string"
                },
                "currency": {
                    "type": "string",
                    "required": true
                }
            }
        },
        "summary" : {
            "type" : "object",
            "properties": {
                "going" : {
                    "type" : "number"
                },
                "maybe" : {
                    "type" : "number"
                },
                "invited" : {
                    "type" : "number"
                }
            }
        },
        "location" : {
            "type" : "object",
            "properties": {
                "name" : {
                    "type" : "string"
                },
                "address" : {
                    "type" : "string"
                },
                "city" : {
                    "type" : "string"
                },
                "region" : {
                    "type" : "string"
                },
                "postalCode" : {
                    "type" : "string"
                },
                "country" : {
                    "type" : "string"
                },
                "url" : {
                    "type" : "string"
                }
            }
        },
        "time" : {
            "type" : "object",
            "properties": {
                "start" : {
                    "type" : "datetime",
                    "required" : true
                },
                "end" : {
                    "type" : "datetime",
                    "required" : true
                },
                "timezone" : {
                    "type" : "string",
                    "required" : true
                }
            }
        },
        "attendees" : {
            "type" : "array",
            "items" : {
                "type" : "object",
                "properties": {
                    "contactId" : {
                        "type": "string"
                    },
                    "name" : {
                        "type": "object",
                        "properties": {
                            "prefix": {
                                "type": "string"
                            },
                            "first": {
                                "type": "string"
                            },
                            "middle": {
                                "type": "string"
                            },
                            "last": {
                                "type": "string"
                            },
                            "suffix": {
                                "type": "string"
                            }
                        }
                    },
                    "phone" : {
                        "type": "string"
                    },
                    "email" : {
                        "type": "string"
                    },
                    "notes" : {
                        "type": "string"
                    },
                    "self" : {
                        "type": "boolean"
                    },
                    "kind" : {
                        "type" : "string",
                        "enum" : ["ADULT", "CHILD", "SENIOR"],
                        "required" : true
                    },
                    "RSVP" : {
                        "type" : "string",
                        "enum" : ["YES", "NO", "MAYBE"],
                        "required" : true
                    },
                    "guests" : {
                        "type" : "array",
                        "items" : {
                            "type" : "object",
                            "properties": {
                                "amount": {
                                    "type": "number",
                                    "required": true
                                },
                                "kind": {
                                    "type": "string",
                                    "enum": [
                                        "ADULT",
                                        "CHILD",
                                        "SENIOR"
                                    ],
                                    "required": true
                                }
                            }
                        },
                        "required" : false
                    }
                }
            }
        }
    }
}
